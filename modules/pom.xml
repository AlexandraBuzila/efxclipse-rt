		<module>org.eclipse.fx.core.di</module>
		<module>org.eclipse.fx.core.di.context</module>
		<module>org.eclipse.fx.core.databinding</module>
		<module>org.eclipse.fx.core.fxml</module>
		<module>org.eclipse.fx.core.guice</module>
		<module>org.eclipse.fx.ui.panes</module>
		<module>org.eclipse.fx.ui.controls</module>
		<module>org.eclipse.fx.ui.controls.nl</module>
		<module>org.eclipse.fx.emf.databinding</module>
		<module>org.eclipse.fx.css.jfx8</module>
		<module>org.eclipse.fx.core.log4j</module>
		<module>org.eclipse.fx.core.p2</module>
		<module>org.eclipse.fx.core.junit</module>
		<module>org.eclipse.fx.osgi.util</module>
		<module>org.eclipse.fx.ui.di</module>
		<module>org.eclipse.fx.core.slf4j</module>
		<module>org.eclipse.fx.emf.edit.ui</module>
		<module>org.eclipse.fx.osgi</module>
		<module>org.eclipse.fx.formats.svg</module>
		<module>org.eclipse.fx.ui.databinding</module>
		<module>org.eclipse.fx.ui.dialogs</module>
		<module>org.eclipse.fx.ui.dialogs.nl</module>
		<module>org.eclipse.fx.ui.animation</module>
		<!-- module>org.eclipse.fx.json.schema</module -->
		<module>javax.annotation.jre</module>
		<module>javax.xml.jre</module>
		<module>org.eclipse.fx.ui.services</module>
		<!-- module>org.eclipse.fx.ui.di.interopt</module -->
		<module>org.eclipse.fx.ui.keybindings</module>
		<module>org.eclipse.fx.ui.keybindings.e4</module>
		<module>org.eclipse.fx.ui.theme</module>
		<module>org.eclipse.fx.ui.keybindings.generic</module>
		<module>org.eclipse.fx.ui.workbench.services</module>
		<module>org.eclipse.fx.ui.workbench.base</module>
		<module>org.eclipse.fx.ui.workbench.fx</module>
		<module>org.eclipse.fx.ui.workbench.renderers.base</module>
		<module>org.eclipse.fx.ui.workbench.renderers.fx</module>
	</modules>

	<repositories>
		<repository>
			<name>BestSolution e(fx)clipse releases</name>
			<id>efxclipse-releases</id>
			<url>http://maven.bestsolution.at/efxclipse-releases/</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>eclipse-cbi-releases</id>
			<url>https://repo.eclipse.org/content/groups/cbi/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<build>
		<plugins>
			<!-- plugin>
				<groupId>biz.aQute.bnd</groupId>
				<artifactId>bnd-testing-maven-plugin</artifactId>
				<version>3.3.0</version>
				<configuration>
					<bndruns>
						<bndrun>test.bndrun</bndrun>
					</bndruns>
					<failOnChanges>false</failOnChanges>
				</configuration>
				<executions>
					<execution>
						<id>testing</id>
						<goals>
							<goal>testing</goal>
						</goals>
					</execution>
				</executions>
			</plugin-->
			<plugin>
				<groupId>biz.aQute.bnd</groupId>
				<artifactId>bnd-maven-plugin</artifactId>
				<version>3.3.0</version>
				<executions>
					<execution>
						<id>default-bnd-process</id>
						<goals>
							<goal>bnd-process</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.6.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<!-- The following configuration is required because bnd-maven-plugin 
				generates the manifest to target/classes/META-INF/MANIFEST.MF but the normal 
				maven-jar-plugin does not use it. If the jar-plugin is patched to pick up 
				the manifest from this location, then the following config is not needed. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<archive>
						<manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.0.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- plugin> <groupId>org.apache.maven.plugins</groupId> <artifactId>maven-javadoc-plugin</artifactId> 
				<version>2.10.4</version> <executions> <execution> <id>attach-javadocs</id> 
				<goals> <goal>jar</goal> </goals> </execution> </executions> <configuration> 
				<failOnError>false</failOnError> <tags> <tag> <name>noimplement</name> <placement>a</placement> 
				<head>@noimplement This API is only supposed to be referenced</head> </tag> 
				<tag> <name>noreference</name> <placement>a</placement> <head>@noreference 
				This API is not finalized and should be treated as an implementation detail</head> 
				</tag> </tags> </configuration> </plugin -->
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>build-server</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.cbi.maven.plugins</groupId>
						<artifactId>eclipse-jarsigner-plugin</artifactId>
						<version>${cbi-plugins.version}</version>
						<executions>
							<execution>
								<id>sign</id>
								<goals>
									<goal>sign</goal>
								</goals>
								<!-- phase>verify</phase -->
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>