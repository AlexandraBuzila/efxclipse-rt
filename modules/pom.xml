	<groupId>at.bestsolution.efxclipse.rt</groupId>
	<artifactId>rt</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<cbi-plugins.version>1.1.3</cbi-plugins.version>
	</properties>

